---
layout: null
permalink: /sitemap.xml
sitemap:
  exclude: 'yes'

# See http://www.independent-software.com/generating-a-sitemap-xml-with-jekyll-without-a-plugin.html

# NOTE: this is a draft (Emerson Rocha, 2021-05-14 16:06 UTC)
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xhtml="http://www.w3.org/1999/xhtml">

  <!--
    Home /
  -->
  <url>
      <loc>{{ site.url }}/</loc>
      <lastmod>{{ "now" | date_to_xmlschema }}</lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.7</priority>
      <xhtml:link
        rel="alternate"
        hreflang="x-default"
        href="{{ site.url }}/" />
      <xhtml:link
        rel="alternate"
        hreflang="en"
        href="{{ site.url }}/eng/" />
      <xhtml:link
        rel="alternate"
        hreflang="pt"
        href="{{ site.url }}/por/" />
  </url>

  <!--
    /eng/
  -->
  <url>
      <loc>{{ site.url }}/eng/</loc>
      <lastmod>{{ "now" | date_to_xmlschema }}</lastmod>
      <changefreq>daily</changefreq>
      <priority>1.0</priority>
      <xhtml:link
        rel="alternate"
        hreflang="x-default"
        href="{{ site.url }}/" />
      <xhtml:link
        rel="alternate"
        hreflang="en"
        href="{{ site.url }}/eng/" />
      <xhtml:link
        rel="alternate"
        hreflang="pt"
        href="{{ site.url }}/por/" />
  </url>

  <!--
    /por/
  -->
  <url>
      <loc>{{ site.url }}/por/</loc>
      <lastmod>{{ "now" | date_to_xmlschema }}</lastmod>
      <changefreq>daily</changefreq>
      <priority>1.0</priority>
      <xhtml:link
        rel="alternate"
        hreflang="x-default"
        href="{{ site.url }}/" />
      <xhtml:link
        rel="alternate"
        hreflang="en"
        href="{{ site.url }}/eng/" />
      <xhtml:link
        rel="alternate"
        hreflang="pt"
        href="{{ site.url }}/por/" />
  </url>

  <!--
    typum: api
  -->
  {% for api in site.pages -%}
    {%- if api.typum == 'api' %}
  <url>
    <loc>{{ site.url }}{{ api.url }}</loc>
    {% if api.sitemap.lastmod %}
    <lastmod>{{ api.sitemap.lastmod | date: "%Y-%m-%d" }}</lastmod>
    {% elsif api.date %}
    <lastmod>{{ api.date | date_to_xmlschema }}</lastmod>
    {% else %}
    <lastmod>{{ "now" | date_to_xmlschema }}</lastmod>
    {% endif %}
    {%- if api.sitemap.changefreq -%}
    <changefreq>{{ api.sitemap.changefreq }}</changefreq>
    {% else %}
    <changefreq>weekly</changefreq>
    {% endif %}
    {%- if api.sitemap.priority -%}
    <priority>{{ api.sitemap.priority }}</priority>
    {% else %}
    <priority>0.3</priority>
    {% endif %}
    {% if api.x-default %}
    <xhtml:link
      rel="alternate"
      hreflang="x-default"
      href="{{ site.url | append: api.x-default }}" />
    {%- endif %}
  </url>
    {% endif %}
  {%- endfor %}

</urlset>